<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/pers_boggle_accept_sync"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/pers_boggle_accept_sync"
	    android:visibility="invisible"
        />
    
    <Button
        android:id="@+id/pers_boggle_accept_async"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/pers_boggle_accept_async"
        />
    
    <Button 
        android:id="@+id/pers_boggle_decline"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/pers_boggle_decline"
        />
    

</LinearLayout>